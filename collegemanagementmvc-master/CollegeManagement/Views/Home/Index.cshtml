@model CollegeManagement.Models.DataModel.User;


@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center text-secondary">
    <h1>
        Login
    </h1>
</div>
<br />
<br />
<div class="container">
    <form method="post" asp-controller="Home" asp-action="SignIn">
        <div class="row">
            @ViewBag.Message
        </div>
        <div class="row">

            <div class="col-md-6">

                <div class="form-outline">

                    <label>UserName :</label>
                    <input asp-for="EmailId" class="form-control" placeholder="UserName" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>


                </div>
                <br />
                <div class="form-outline">
                    <label>Password :</label>
                    <input type="password" asp-for="UserPassword" class="form-control" placeholder="Password" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>


                </div>
                <br />

                <div>
                    @*<input type="button" id="btnLOGIN" value="LOGIN" onclick="location.href = '@Url.Action("Login", "Employee")'" />*@
                    <input type="submit" class="text-secondary" value="Login" />


                </div>
            </div>
        </div>
    </form>
</div>

